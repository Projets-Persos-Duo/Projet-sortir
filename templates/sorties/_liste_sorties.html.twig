<section class="container">
    <section class="grid">
          {% for sortie  in sorties %}
              {% if app.request.attributes.get('_route') != 'sorties_liste_archivees' %}
                  {% if sortie.raisonAnnulation == null %}
                      {% include 'sorties/_liste_sorties_miniatures.html.twig' %}
                  {% endif %}
              {% endif %}
              {% if app.request.attributes.get('_route') == 'sorties_liste_archivees' %}
